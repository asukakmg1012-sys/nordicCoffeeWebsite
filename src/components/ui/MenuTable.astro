---
const { category, items } = Astro.props;

interface MenuItem {
    name: string;
    description: string;
    price: string;
}

interface Props {
    category: string;
    items: MenuItem[];
}
---

<div class="space-y-8">
    <h2
        class="text-xs font-bold uppercase tracking-[0.3em] text-accent border-b border-accent/20 pb-4 inline-block"
    >
        {category}
    </h2>

    <div class="space-y-12">
        {
            items.map((item) => (
                <div class="grid grid-cols-1 md:grid-cols-12 gap-2 group">
                    <div class="md:col-span-10">
                        <h3 class="text-lg font-medium text-ink group-hover:text-accent transition-colors duration-300">
                            {item.name}
                        </h3>
                        <p class="text-sm text-ink-muted leading-relaxed mt-1 max-w-xl">
                            {item.description}
                        </p>
                    </div>
                    <div class="md:col-span-2 md:text-right">
                        <span class="text-sm font-medium text-ink tabular-nums">
                            {item.price}
                        </span>
                    </div>
                </div>
            ))
        }
    </div>
</div>
