---
import BaseLayout from '../layouts/BaseLayout.astro';

const news = [
	{
		date: '2026.02.01',
		title: 'バレンタイン限定：エストニア産ベリーのタルト販売開始',
		category: 'Seasonal'
	},
	{
		date: '2026.01.15',
		title: '新しい豆が入荷しました：エチオピア イルガチェフェ G1',
		category: 'Beans'
	},
	{
		date: '2026.01.01',
		title: '新年のご挨拶と営業開始のお知らせ',
		category: 'Info'
	},
	{
		date: '2025.12.20',
		title: '冬季休暇期間のお知らせ',
		category: 'Info'
	}
];
---

<BaseLayout title="News | Nordic Coffee">
	<section class="py-24 px-6 md:px-12 max-w-3xl mx-auto">
		<header class="mb-24">
			<h1 class="text-display font-medium text-ink mb-6">News</h1>
			<p class="text-lg text-ink-muted">日々の出来事や、新しい味の到着を綴ります。</p>
		</header>
		
		<div class="space-y-12 mb-24">
			{news.map(item => (
				<article class="group relative py-8 border-b border-ink/5 last:border-0">
					<div class="flex flex-col md:flex-row md:items-baseline gap-4 md:gap-12">
						<time class="text-sm tabular-nums text-ink-muted shrink-0 w-24">
							{item.date}
						</time>
						<div class="space-y-2">
							<span class="inline-block text-[10px] font-bold uppercase tracking-widest text-accent/60 bg-accent/5 px-2 py-0.5 rounded-sm">
								{item.category}
							</span>
							<h2 class="text-xl text-ink group-hover:text-accent transition-colors duration-300">
								<a href="#">{item.title}</a>
							</h2>
						</div>
					</div>
					<!-- Hover arrow indicator -->
					<div class="absolute right-0 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 group-hover:translate-x-2 transition-all duration-300 hidden md:block">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
							<line x1="5" y1="12" x2="19" y2="12"></line>
							<polyline points="12 5 19 12 12 19"></polyline>
						</svg>
					</div>
				</article>
			))}
		</div>
		
		<div class="flex justify-center pt-12 border-t border-ink/5">
			<a href="#" class="text-sm font-medium text-ink-muted hover:text-ink transition-colors uppercase tracking-widest">
				Load More
			</a>
		</div>
	</section>
</BaseLayout>
